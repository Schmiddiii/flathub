{
    "app-id": "de.schmidhuberj.Flare",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "flare",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--talk-name=org.freedesktop.secrets"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/flare/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "flare",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-xz",
                    "url": "https://gitlab.com/Schmiddiii/flare/-/package_files/44606657/download",
                    "sha256": "35e93457197cbab3569c514c3a38e0bfc57a7f58a737266808e8394865fd81d3"
                }
            ]
        }
    ]
}
